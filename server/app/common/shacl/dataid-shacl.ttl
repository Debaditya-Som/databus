  sh:languageIn ("en") ;
  sh:uniqueLang true .

<#properties-are-cvs>
  a sh:PropertyShape ;
  sh:targetClass rdf:Property ; 
  sh:path rdfs:subPropertyOf ;
  sh:hasValue dataid:contentVariant ;
  sh:message "All rdf:Properties MUST be an rdfs:subPropertyOf dataid:contentVariant."@en .