@prefix dash: <http://datashapes.org/dash#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dataid: <http://dataid.dbpedia.org/ns/core#> .
@prefix dct:   <http://purl.org/dc/terms/> .
@prefix dcat:  <http://www.w3.org/ns/dcat#> .
@prefix dcv: <http://dataid.dbpedia.org/ns/cv#> .
@prefix db: <https://databus.dbpedia.org/sys/ont/> .

<#dataset-exists>
  a sh:NodeShape ;
  sh:targetNode dataid:Dataset ; 
  sh:property [
      sh:path [ sh:inversePath rdf:type ] ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
      sh:message "Exactly one subject with an rdf:type of dataid:Dataset must occur."@en ;
  ] .

<#artifact-exists>
  a sh:NodeShape ;
  sh:targetNode dataid:Artifact ; 
  sh:property [
      sh:path [ sh:inversePath rdf:type ] ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
      sh:message "Exactly one subject with an rdf:type of dataid:Artifact must occur."@en ;
  ] .

<#version-exists>
  a sh:NodeShape ;
  sh:targetNode dataid:Version ; 
  sh:property [
      sh:path [ sh:inversePath rdf:type ] ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
      sh:message "Exactly one subject with an rdf:type of dataid:Version must occur."@en ;
  ] .


<#has-group>   
  a sh:PropertyShape ;
  sh:targetClass dataid:Dataset ;
  sh:severity sh:Violation ;
  sh:message "Required property dct:group MUST occur exactly once AND be of type IRI"@en ;
  sh:path dataid:group ;
  sh:minCount 1 ;
  sh:maxCount 1 ;
  sh:nodeKind sh:IRI .


<#has-distribution>   
  a sh:PropertyShape ;
  sh:targetClass dataid:Dataset ;
  sh:severity sh:Violation ;
  sh:message "Required property dct:distribution MUST occur at least once"@en ;
  sh:path dcat:distribution ;
  sh:minCount 1 .


<#has-file>   
  a sh:PropertyShape ;
  sh:targetClass dataid:SingleFile ;
  sh:severity sh:Violation ;
  sh:message "A dataid:SingleFile MUST have exactly one dataid:file of type IRI"@en ;
  sh:path dataid:file;
  sh:minCount 1 ;
  sh:maxCount 1 ;
  sh:nodeKind sh:IRI .

  
<#has-format>   
  a sh:PropertyShape ;
  sh:targetClass dataid:SingleFile ;
  sh:severity sh:Violation ;
  sh:message "A dataid:SingleFile MUST have exactly one dataid:formatExtension of type IRI"@en ;
  sh:path dataid:formatExtension ;
  sh:datatype xsd:string ;
  sh:maxCount 1 ;
  sh:minCount 1 .



<#properties-are-cvs>
  a sh:PropertyShape ;
  sh:targetClass rdf:Property ; 
  sh:path rdfs:subPropertyOf ;
  sh:hasValue dataid:contentVariant ;
  sh:message "All rdf:Properties MUST be an rdfs:subPropertyOf dataid:contentVariant."@en .
