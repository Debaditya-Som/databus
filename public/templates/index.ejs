    <section class="section">
      <div class="container">
        <div class="columns">
          <div class="column is-4 stats">
            <p class="section-label">Recent Activity</p>
            <activity-chart data="activityChartData" height="400"></activity-chart>
            <br />
            <br />
            <p ng-if="uploadRankingData.length > 0" class="section-label">Most Active Users</p>
            <uploader-ranking ng-if="uploadRankingData.length > 0" data="uploadRankingData"></uploader-ranking>
