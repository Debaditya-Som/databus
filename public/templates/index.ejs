            </div>
            <search></search>
            <br />
            <p ng-if="recentUploadsData.length > 0" class="section-label">New Artifacts</p>
            <br />
            <div ng-repeat="dataset in recentUploadsData">
              <entity-card style="flex: 1;" label="dataset.label" type="'Artifact'" uri="dataset.artifactUri"
                desc="dataset.desc" date="dataset.date">
              </entity-card>
              <div ng-if="!$last" class="is-divider"></div>
            </div>
          </div>
        </div>
      </div>
